# ===========================================
# VOUCHER APPLICATION - ENVIRONMENT CONFIG
# ===========================================

# Application Configuration
NODE_ENV=development
APP_NAME=Voucher Application
APP_VERSION=1.0.0
PORT=3000
HOST=localhost
APP_URL=http://localhost:3000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/voucher_app
MONGO_DB_NAME=voucher_app
MONGO_MAX_POOL_SIZE=10
MONGO_SERVER_SELECTION_TIMEOUT=5000
MONGO_SOCKET_TIMEOUT=45000

# Redis Configuration (for Bull Queue & Caching)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-at-least-32-chars
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Voucher App <no-reply@voucherapp.com>
EMAIL_REPLY_TO=support@voucherapp.com

# Queue Configuration (Bull)
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_TYPE=exponential
QUEUE_BACKOFF_DELAY=2000
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50
QUEUE_DELAY=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization

# Security Headers
HELMET_CSP=true
HELMET_COEP=true

# Business Logic Configuration
VOUCHER_CODE_LENGTH=8
VOUCHER_CODE_PREFIX=VC
VOUCHER_MAX_RETRIES=3
VOUCHER_LOCK_TIMEOUT=300000

EVENT_EDIT_LOCK_TIMEOUT=300000
EVENT_MAX_CONCURRENT_EDITS=1

PAGINATION_DEFAULT_LIMIT=10
PAGINATION_MAX_LIMIT=100

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

METRICS_ENABLED=false
METRICS_ENDPOINT=/metrics

# ===========================================
# PRODUCTION OVERRIDES (uncomment for production)
# ===========================================

# NODE_ENV=production
# APP_URL=https://your-domain.com
# JWT_SECRET=your-super-secure-production-jwt-secret-key-here
# REFRESH_TOKEN_SECRET=your-super-secure-production-refresh-secret-key-here
# MONGO_URI=mongodb://username:password@your-mongo-cluster/voucher_app
# REDIS_HOST=your-redis-cluster.cache.amazonaws.com
# REDIS_PASSWORD=your-redis-password
# EMAIL_HOST=your-smtp-server.com
# LOG_LEVEL=warn
# CORS_ORIGIN=https://your-frontend-domain.com
# HEALTH_CHECK_ENABLED=true
# METRICS_ENABLED=true